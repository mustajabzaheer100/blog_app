<div class="container">
    <%= form_with model: @post do |f| %>
    <div class="card">
      <div class="card-body">

        <div class="form-group mb-1">
          <%= f.label :title, class: "form-label" %><br>
          <%= f.text_field :title, {class: "form-control form-control-lg", placeholder: "Enter the Title"} %><br>
          <% @post.errors.full_messages_for(:title).each do |message| %>
            <div class="alert"><%= message %></div>
          <% end %>
        </div>

        <div class="form-group mb-1">
          <%= f.label :description, class: "form-label" %><br>
          <%= f.text_area :description , { class: "form-control form-control-lg", placeholder: "Enter the Description" } %>
        </div>

        <div class="form-group mb-1">
          <%= f.file_field :image %>
        </div><br>

        <div class="mb-1">
          <%= f.submit class: "btn btn-primary" %>
        </div>

      </div>
    </div>
  <% end %>

</div>
<% if flash[:notice] %>
  <div><%= flash[:notice] %></div>
<% end %>
